@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Cari Listesi</h2>
<br />

<table class="table table-striped">
    <tr>
        <th>Cari Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CariId</td>
                    <td>@item.CariAd</td>
                    <td>@item.CariSoyad</td>
                    <td>@item.CariSehir</td>
                    <td>@item.CariMail</td>
                    <td><a href="/Cari/CariSil/@item.CariId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Cari/CariGetir/@item.CariId"class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Cari/MusteriSatis/@item.CariId"class="btn btn-dark">Satış Geçmişi</a></td>
                </tr>
            }
</table>
<a href="/Cari/CariEkle" class="btn btn-primary">Yeni Cari Ekle</a>
