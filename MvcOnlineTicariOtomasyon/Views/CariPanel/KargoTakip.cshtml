@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>KargoTakip</h2>

<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip No: @Html.TextBox("search")
        <input type="submit" value="Ara" />
    </p>
}


<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Kargo Takip Kodu</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@item.Tarih</td>
            <td>@item.TakipKodu</td>

            <td><a href="/CariPanel/CariKargoTakip/@item.TakipKodu" class="btn btn-dark" style="background-color:gray; color:white;">Detaylar</a></td>
        </tr>
    }

</table>


