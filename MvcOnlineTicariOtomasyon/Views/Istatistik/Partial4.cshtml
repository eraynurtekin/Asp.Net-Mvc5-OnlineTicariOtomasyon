@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün-Marka İlişkisi</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int siraNo = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{siraNo++;}@siraNo</td>
                        <td>@item.Marka</td>
                        <td>
                            @if (@item.Sayi >= 1 && item.Sayi<=2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (@item.Sayi >= 3 && item.Sayi<=4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (@item.Sayi >= 5)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }

                        </td>
                        <td>
                            @if (@item.Sayi >= 1 && item.Sayi <= 2)
                            {
                                <span class="badge bg-danger">@item.Sayi</span>
                            }
                            @if (@item.Sayi >= 3 && item.Sayi <= 4)
                            {
                                <span class="badge bg-warning">@item.Sayi</span>
                            }
                            @if (@item.Sayi >= 5)
                            {
                                <span class="badge bg-success">@item.Sayi</span>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>