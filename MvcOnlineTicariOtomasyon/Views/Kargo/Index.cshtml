@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
<p>
    Kargo Takip No: @Html.TextBox("search")
    <input type="submit" value="Ara"/>
</p>
}


<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Kargo Takip Kodu</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@item.Tarih</td>
            <td>@item.TakipKodu</td>

            <td><a href="/Kargo/KargoTakip/@item.TakipKodu" class="btn btn-dark" style="background-color:gray; color:white;">Detaylar</a></td>
        </tr>
    }

</table>
<a href="/Kargo/YeniKargo" class="btn btn-primary">Yeni Kargo</a>



