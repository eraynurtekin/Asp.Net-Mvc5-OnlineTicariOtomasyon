@model MvcOnlineTicariOtomasyon.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kargo Ekle</h2>
<br />

<form class="form-group" method="post">
    <label>Takip Kodu:</label>
    <input type="text" value="@ViewBag.takipkod" class="form-control" name="TakipKodu" readonly/>
    <br />
    <label>Personel:</label>
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    <label>Alıcı:</label>
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    <label>Açıklama:</label>
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <label>Tarih:</label>
    <input class="form-control" type="date" name="Tarih" />
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

